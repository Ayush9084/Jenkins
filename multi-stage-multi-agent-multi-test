pipeline {
  agent none  // no global agent — each stage uses its own Docker container

  stages {

    stage('Back-end Build') {
      agent {
        docker { image 'maven:3.8.1-adoptopenjdk-11' }
      }
      steps {
        echo 'Building Java back-end...'
        sh 'echo "Simulating Maven build..."'
      }
    }

    stage('Front-end Build') {
      agent {
        docker { image 'node:16-alpine' }
      }
      steps {
        echo 'Installing dependencies and building front-end...'
        sh '''
          npm install
          npm run build
        '''
      }
    }

    stage('Front-end Test') {
      agent {
        docker { image 'node:16-alpine' }
      }
      steps {
        echo 'Running front-end tests...'
        sh 'npm test || true' // "|| true" prevents pipeline failure if no tests
      }
    }

  }

  post {
    success {
      echo '✅ Build and tests completed successfully!'
    }
    failure {
      echo '❌ Build failed. Check logs for details.'
    }
  }
}
